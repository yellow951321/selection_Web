extends mixins/layout

//- css
append head
  +shortCss('type')

append buttons
  //- append buttons in the header
  include mixins/_addbutton

append content
  //- popup addproject
  include mixins/_projectcreation.pug

  #type-select.ui.middle.aligned.center.aligned.grid.container.pusher
