include _objects.pug
mixin newEdit()
	form.ui.form.segment
		.four.fields
			.three.wide.field
				.fields
					.eight.wide.field
						label 開始頁面
						input.page__start(type='number' value='1')
					.eight.wide.field
						label 結束頁面
						input.page__end(type='number' value='1')
			.nine.wide.field
				label 標題
				input.title
			.two.wide.field
				.ui.container.center.aligned(style='padding-top: 1rem')
					button.ui.button.save(type='submit') 儲存
			.two.wide.field
				.ui.container.center.aligned(style='padding-top: 1rem')
					button.ui.button.delete(type='submit') 刪除
		.field
			label 內容
			textarea.content(name="", rows="5")


mixin edit(info)
	form.ui.form.segment
		.four.fields
			.three.wide.field
				.fields
					.eight.wide.field
						label 開始頁面
						input.page__start(type='number' value=info[ 'page' ][ 'start' ])
					.eight.wide.field
						label 結束頁面
						input.page__end(type='number' value=info[ 'page'][ 'end' ])
			.nines.wide.field
				label 標題
				input.title(value=info[ 'title' ])
			.one.wide.field
				.ui.container.center.aligned(style='padding-top: 1rem')
					button.ui.button.save(type='submit') 儲存
			.one.wide.field
				.ui.container.center.aligned(style='padding-top: 1rem')
					button.ui.button.delete(type='submit') 刪除
		.field
			label 內容
			textarea.content(name="", rows="5")=info[ 'content' ]