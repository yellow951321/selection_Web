extends layout

append head
  title Login
  link(rel='stylesheet', href='/static/stylesheets/login.css')

append content
  .ui.center.aligned.container
    form#login.ui.form(method='POST', action='/auth/login')
      h1 LOGIN
      .field
        label.interface account:
        input.account(type='text', name='username', style='width:300px;height:40px;', value='', placeholder="account", minlength="3", maxlength="25")
      .field
        label.interface password:
        #hide.ui.left.pointing.red.basic.label Password Wrong
        input.password(type='password', name='password', style='width:300px;height:40px;', value='', placeholder="password", minlength="6", maxlength="25")
        #wrong.ui.left.pointing.red.basic.label Password Wrong
      button.ui.primary.button(type='submit', style='width:100px;height:40px;') login
    a#signupbutton.ui.button(href='/auth/signup', style='width:100px;height:40px;') sign up

