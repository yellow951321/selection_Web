extends mixins/layout

append head
  +midLongCss('review')

append content
  .ui.container
    #advice.ui.small.modal
      .ui.form.segment.filter
        .three.fields
          include mixins/_filterthreefield
          +filter('教學(B)','研究(C)','產學(D)','社會責任(E)','大學治理及公共性(F)','不具體','未分類')
      .actions
        button.ui.negative.button 取消
        button.ui.positive.button 確認

  //- content
  //- page edit
  #page-message.ui.container.center.aligned.transition.hidden.save-message
    .ui.floating.message

  include mixins/editnodes/review.pug
  #page-audit.ui.container.pusher
    for val in contents
      +renderReviewNode(val)
  #page-message.ui.container.center.aligned.transition.hidden.save-message
    .ui.floating.message

  #page-edit.ui.container


append script
  +midLongJS('review')