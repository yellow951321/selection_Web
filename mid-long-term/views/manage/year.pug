extends component/layout

//- css
append head
  link(rel='stylesheet', href='/mid-long-term/static/stylesheets/yearBox.css')

//- append buttons in the header
append buttons
  a.add.ui.item 新增

append content
  //- pop up deleteproject
  .ui.container
    #delete.ui.small.modal
      .header 確定要刪除嗎
      .content
        p 確定要刪除這筆資料嗎
      .actions
        button.ui.negative.button 取消
        button.ui.positive.button 刪除

  //- popup addproject
  .ui.container
    form#addForm.ui.form.modal(action=`/mid-long-term/${GLOBAL['id']}/0/0/0/file/add`, method='POST')
      h4.header 新增計畫
      .content.field
        label(for='year') 年份
        input(type='number', min='90', max='300', step='1', value='108', name='year', required)
        label(for='project') 學校類型
        select.type-dropdown.ui.selection.dropdown(type='text', placeholder='選擇學校類型', name='type', required)
          option(value='0') 大學
          option(value='1') 技專院校
        label(for='campus') 學校
        select.campus-dropdown.ui.selection.dropdown(type='text', placeholder='Enter school Name', name='campus', required)
        .normal.ui.transition.hidden
          each val in GLOBAL['map']['0']
            option(value=val)=val
        .others.ui.transition.hidden
          each val in GLOBAL['map']['1']
            option(value=val)=val

      .actions
        button.ui.black.deny.button(type='button') 取消
        button#add-project.ui.positive.right.lacbeled.icon.button(type='submit') 新增

  include mixins/_renderYear.pug
  //- content
  //- page select
  #page-management.ui.container.pusher
    if GLOBAL['yearFroms'].length
      for yearFrom in GLOBAL['yearFroms']
        .year.ui.container
          h1.yearFrom.header= yearFrom.year
          for yearTo in yearFrom.info
            +renderYear(yearTo)


    else
      .ui.center.aligned.container
        div 請點擊右上角新增來新增專案

append script
  script(src='/mid-long-term/static/javascripts/manage/year.js')