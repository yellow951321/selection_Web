extends component/layout

//- css
append head
  link(rel='stylesheet', href='/mid-long-term/static/stylesheets/box.css')

//- append buttons in the header
append buttons
  a.add.ui.item 新增

append content
  //- popup addproject
  .ui.container
    form#addForm.ui.form.modal(action=`/mid-long-term/${GLOBAL['id']}/0/0/0/file/add`, method='POST')
      h4.header 新增計畫
      .content.field
        label(for='year') 年份
        input(type='number', min='0', max='300', step='1',value='108', name='year', required)
        label(for='project') 學校類型
        select.type-dropdown.ui.selection.dropdown(type='text', placeholder='選擇學校類型', name='type', required)
          option(value='0') 大學
          option(value='1') 技專院校
        label(for='campus') 學校
        select.campus-dropdown.ui.selection.dropdown(type='text', placeholder='Enter school Name', name='campus', required)

        .normal.ui.transition.hidden
          each val in GLOBAL['map']['0']
            option(value= val)=val
        .others.ui.transition.hidden
          each val in GLOBAL['map']['1']
            option(value= val)=val

      .actions
        button.ui.black.deny.button(type='button') 取消
        button#add-project.ui.positive.right.lacbeled.icon.button(type='submit') 新增

  //- content
  //- page select
  #type-select.ui.middle.aligned.center.aligned.grid.container.pusher
    .two.column.row
      for val in GLOBAL['types']
        .column
          a.blue.square-box(href=`/mid-long-term/${GLOBAL.id}/${val.id}/index`)=val.name

append buttons

append script
  script(src='/mid-long-term/static/javascripts/manage/type.js')