mixin renderReviewNode(val)
	form.ui.form.segment.editNode
		.fields
			.eight.wide.field
				.fields
					.eight.wide.field
						label 開始頁
						input.page__start(type='number' value=val.pageFrom disabled)
					.eight.wide.field
						label 結束頁
						input.page__end(type='number' value=val.pageTo disabled)
			if val.isChecked == 0
				.four.wide.field
					.ui.container.center.aligned.choice-block
						button.ui.button.recommend(type='submit') 建議
				.four.wide.field
					.ui.container.center.aligned.choice-block
						button.ui.button.check(type='submit') 確認
			else
				.eight.wide.field
					label=`已經由${val.reviewerId}審查通過`
		.fields
			if val.isChecked == 0
				.eight.wide.field
					label 原構面
					.aspect=val.aspect
					label 原推動重點
					.keypoint=val.keypoint
					label 原推動作法
					.method=val.method
				.eight.wide.field
					label 建議構面
					if val.conflictedAspect
						.conflictedAspect=val.conflictedAspect
					else
						.conflictedAspect
					label 建議推動重點
					if val.conflictedKeypoint
						.conflictedKeypoint=val.conflictedKeypoint
					else
						.conflictedKeypoint
					label 建議推動作法
					if val.conflictedMethod
						.conflictedMethod=val.conflictedMethod
					else
						.conflictedMethod
			else
				.five.wide.field
					label 構面
					.aspect=val.aspect
				.five.wide.field
					label 推動重點
					.keypoint=val.keypoint
				.five.wide.field
					label 推動作法
					.method=val.method
		.fields
			.four.wide.field
				label 大標題
				input.title1(value = val.title1 disabled)
			.four.wide.field
				label 中標題
				input.title2(value = val.title2 disabled)
			.four.wide.field
				label 小標題
				input.title3(value = val.title3 disabled)
			.four.wide.field
				label 最小標題
				input.title4(value = val.title4 disabled)
		.field
			label 內容
			textarea.content(name="", rows="5" disabled)= val.content
		.field
			label 摘要
			textarea.summary(name="", rows="2" disabled)= val.summary
			label 備註
			textarea.note(name="", rows="1" disabled)= val.note
		input.node-index(type='hidden' value = val.contentId)