extends mixins/layout

append head
  +midLongCss('edit')

append content
  //- popup delete content
  include mixins/_suredelete

  //- popup advice filter
  .ui.container
    #advice.ui.small.modal
      .ui.form.segment.filter
        .three.fields
          include mixins/_filterthreefield
          +filter('教學','研究','產學','社會責任','大學治理及公共性')

  //- content
  //- page edit
  #page-message.ui.container.center.aligned.transition.hidden.save-message
    .ui.floating.message

  #page-filter.ui.container.pusher
    .dataId.transition.hidden=dataId
    .ui.form.segment.filter
      .five.fields
        +filter('教學','研究','產學','社會責任','大學治理及公共性')
        .field
          label 模式
          select.filter.filter__mode.ui.selection.dropdown
            option(value='edit') 編輯
            option(value='check') 待確認
        .field
          .ui.container.center.aligned.choice-block
            button.ui.button.filter.filter__choice 選擇
    .reserved.ui.transition.hidden
      if aspect
        .reserved__dimension=aspect
        .reserved__item=keypoint
        .reserved__detail=method

  #page-edit.ui.container

  #footer.ui.container.center.aligned.transition.hidden
    .ui.floating.message.transition.hidden
      p 尚未新增任何資料
    i.add-content.ui.plus.circle.icon
    //- button.add-content.ui.blue.button 新增
    i.arrow.alternate.circle.up.icon

append script
  +midLongJS('edit')