for val in contents
	form.ui.form.segment.editNode
		.fields
			.eight.wide.field
				.fields
					.eight.wide.field
						label 開始頁
						p.page__start=val.pageFrom
					.eight.wide.field
						label 結束頁
						p.page__end=val.pageTo
			if val.isChecked == 0
				.four.wide.field
					.ui.container.center.aligned.choice-block
						button.ui.button.recommend(type='submit') 建議
				.four.wide.field
					.ui.container.center.aligned.choice-block
						button.ui.button.check(type='submit') 確認
			else
				.eight.wide.field
					.ui.green.large.label=`已經由${val.reviewerId}審核`
		.six.fields
			if val.isChecked == 0
				.field
					label 原構面
					.ui.large.tag.label.aspect=val.aspect
				.field
					label 原推動重點
					.ui.large.tag.label.keypoint=val.keypoint
				.field
					label 原推動作法
					.ui.large.tag.label.method=val.method
				.field
					label 建議構面
					if val.conflictedAspect
						.ui.orange.large.tag.label.conflictedAspect=val.conflictedAspect
					else
						.ui.orange.large.tag.label.conflictedAspect='尚未建議'
				.field
					label 建議推動重點
					if val.conflictedKeypoint
						.ui.orange.large.tag.label.conflictedKeypoint=val.conflictedKeypoint
					else
						.ui.orange.large.tag.label.conflictedKeypoint='尚未建議'
				.field
					label 建議推動作法
					if val.conflictedMethod
						.ui.orange.large.tag.label.conflictedMethod=val.conflictedMethod
					else
						.ui.orange.large.tag.label.conflictedMethod='尚未建議'
			else
				.five.wide.field
					label 構面
					.ui.large.tag.label.aspect=val.aspect
				.five.wide.field
					label 推動重點
					.ui.large.tag.label.keypoint=val.keypoint
				.five.wide.field
					label 推動作法
					.ui.large.tag.label.method=val.method
		.fields
			.four.wide.field
				label 大標題
				p.title1=val.title1
			.four.wide.field
				label 中標題
				p.title2=val.title2
			.four.wide.field
				label 小標題
				p.title3=val.title3
			.four.wide.field
				label 最小標題
				p.title4=val.title4
		.field
			label 內容
			p.content= val.content
		.field
			if val.summary
				label 摘要
				p.summary=val.summary
			if val.note
				label 備註
				p.note=val.note
		input.node-index(type='hidden' value = val.contentId)