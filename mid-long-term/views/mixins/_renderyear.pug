mixin renderYear(obj)
  form.rectangle-box.year(action=`${GLOBAL.config.server.host}/mid-long-term/data/delete`, method='POST')
    .ui.segment.center.aligned.grid
      .ui.two.column.row
        h3.column.yearHeader= obj.yearTo
      .ui.row
        .sixteen.wide.column
          if obj.userId === id
            a.ui.button.option(href=`${GLOBAL.config.server.host}/mid-long-term/data/edit?dataId=${obj.dataId}`) 編輯
          else
            a.ui.button.option(href=`${GLOBAL.config.server.host}/mid-long-term/${obj.dataId}/review`) 檢閱
          a.ui.button.option(href=`${GLOBAL.config.server.host}/mid-long-term/${obj.dataId}/graph/index`) 圖表
          a.ui.button.option(href=`${GLOBAL.config.server.host}/mid-long-term/${obj.dataId}/download/index`) 下載
          button.ui.button.option.deleteBtn(type='submit', name='dataId', value=obj.dataId) 刪除
      .ui.row.userTimeRow
        p.userTime
          span= `編輯者: ${obj.user}`
          br
          span= `最後更新時間： ${obj.lastUpdateTime}`
      if obj.unchecked > 0
        .ui.row
          .sixteen.wide.column
            #unchecked.ui.red.progress.error(data-percent=`${obj.unchecked}`)
              .bar
                .progress
              .label 尚未審核
      if obj.checked > 0
        .ui.row
          .sixteen.wide.column
            #isChecked.ui.green.progress(data-percent=`${obj.checked}`)
              .bar
                .progress
              .label 審核通過
      if obj.confliced > 0
        .ui.row
          .sixteen.wide.column
            #unsolved.ui.orange.progress(data-percent=`${obj.confliced}`)
              .bar
                .progress
              .label 尚未確認

