.ui.container
  form#addDataForm.ui.form.modal(action=`${GLOBAL.config.server.host}/mid-long-term/data/add`, method='POST')
    h4.header 新增計畫
    .content.field
      .two.fields
        .field
          label(for='yearFrom') 年份起點(民國年)
          input#yearFrom(type='number', min='0', max='300', step='1', value='107', name='yearFrom', required)
        .field
          label(for='yearTo') 年份終點(民國年)
          input#yearTo(type='number', min='0', max='300', step='1', value='108', name='yearTo', required)
      label(for='type') 學校類型
      select#type-dropdown.ui.selection.dropdown(type='text', placeholder='選擇學校類型', name='type', required)
        each typeObj, typeIndex in GLOBAL.campusMap
          option(value=typeIndex)=typeObj.type
      label(for='campus') 學校
      select#campus-dropdown.ui.selection.dropdown(type='text', placeholder='選擇學校', name='campus', required)
      each typeObj, typeIndex in GLOBAL.campusMap
        .ui.transition.hidden(id=`type${typeIndex}`)
          each campus, campusIndex in GLOBAL.campusMap[typeIndex].campus
            option(value=campusIndex)=campus

    .actions
      button.ui.black.deny.button(type='button') 取消
      button.add-project.ui.positive.right.icon.button(type='submit') 新增