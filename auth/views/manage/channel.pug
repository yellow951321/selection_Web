extends component/layout


//- css
append head
  link(rel='stylesheet', href='/auth/static/stylesheets/channel.css')

append content
  //- popup addproject
  .ui.container
    form#addForm.ui.form.modal(action=`/man/${GLOBAL.id}/file/add`, method='POST')
      h4.header 新增計畫
      .content.field
        label(for='year') 年份
        input(type='number', min='90', max='300', step='1', value='108', name='year', required)
        label(for='project') 學校類型
        select.type-dropdown.ui.selection.dropdown(type='text', placeholder='選擇學校類型', name='type', required)
          option(value='0') 大學
          option(value='1') 技專院校
        label(for='campus') 學校
        select.campus-dropdown.ui.selection.dropdown(type='text', placeholder='Enter school Name', name='campus', required)
        .normal.ui.transition.hidden
          each val in GLOBAL['map']['0']
            option(value=val)=val
        .others.ui.transition.hidden
          each val in GLOBAL['map']['1']
            option(value=val)=val

  .actions
        button.ui.black.deny.button(type='button') 取消
        button#add-project.ui.positive.right.lacbeled.icon.button(type='submit') 新增

  //- channel
  .channel.ui.container
    a.mid-long-term(href=`/mid-long-term/index`) 中長程計畫
    a.shortTerm(href=`/shortTerm/index`) 短成計畫

  append script
    script(src='/auth/static/javascripts/index.js')
