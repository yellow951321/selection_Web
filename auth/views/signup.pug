extends mixins/_layout

append head
  title Login
  +authCss('signup.css')

append content
  .ui.center.aligned.container
    form.ui.form(method='POST', action=`${GLOBAL.config.server.host}/auth/signup`)
      h1 SIGN UP
      .field
        label.interface account:
        input.account(type='text', name='account', value='', placeholder="account", minlength="3", maxlength="25")
      .field
        label.interface password:
        input.password(type='password', name='password', value='', placeholder="password", minlength="6", maxlength="25")
      button.ui.secondary.button(type='submit') Confirm
      a#back.ui.button(href=`${GLOBAL.config.server.host}/auth/login`) Back

append script
  +authJS('signup.js')
