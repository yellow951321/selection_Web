extends mixins/_layout

append head
  title Login
  +authCss('login.css')

append content
  .ui.center.aligned.container
    form.ui.form(method='POST', action=`${GLOBAL.config.server.host}/auth/signup`)
      h1 SIGN UP
      .field
        label.interface account:
        input.account2(type='text', name='account', style='width:300px;height:40px;', value='', placeholder="account", minlength="3", maxlength="25")
      .field
        label.interface password:
        input.password2(type='password', name='password', style='width:300px;height:40px;', value='', placeholder="password", minlength="6", maxlength="25")
      button.ui.secondary.button(type='submit', style='width:100px;height:40px;') Confirm
      a#back.ui.button(href="/auth/login", style='width:100px;height:40px;') Back