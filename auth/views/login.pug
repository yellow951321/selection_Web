extends mixins/_layout

append head
  title Login
  +authCss('login')

append content
  .ui.center.aligned.container
    form.ui.form(method='POST', action=`${GLOBAL.config.server.host}/auth/login`)
      h1 LOGIN
      .field
        label.interface account:
        input.account(type='text', name='username', value='', placeholder="account", minlength="3", maxlength="25")
      .field
        label.interface password:
        input.password(type='password', name='password', value='', placeholder="password", minlength="6", maxlength="25")
      if error
        .field
          .ui.red.basic.label=error
      button.ui.primary.button(type='submit') login
      a.ui.button(href=`${GLOBAL.config.server.host}/auth/signup`) sign up
